# ===================================
# Production Environment Configuration
# ===================================

# General Settings
project_name = "roommaster"
environment  = "prod"
location     = "Southeast Asia"

# Container Registry
acr_sku = "Basic"  # Use Standard or Premium for geo-replication

# Container App Configuration
container_app_name = "roommaster-api"
container_port     = 3000

# Scaling Configuration
min_replicas = 1
max_replicas = 10

# Resource Allocation
cpu_per_replica    = 0.5
memory_per_replica = "1Gi"

# Application Configuration
node_env = "production"

# JWT Configuration
jwt_access_expiration_minutes           = "30"
jwt_refresh_expiration_days             = "30"
jwt_reset_password_expiration_minutes   = "10"
jwt_verify_email_expiration_minutes     = "10"

# Logging
log_retention_days = 30

# Tags
tags = {
  Project     = "RoomMaster"
  Environment = "Production"
  ManagedBy   = "Terraform"
  CostCenter  = "Engineering"
}

# ===================================
# Sensitive Variables (Set via TF_VAR_ or -var-file)
# ===================================
# database_url  = "postgresql://..." # Set via GitHub Secrets or tfvars
# jwt_secret    = "your-secret-key"  # Set via GitHub Secrets or tfvars
